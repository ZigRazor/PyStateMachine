<?xml version="1.0"?>
<x:States xmlns:x="pystatemachine:sm">
    <State>
        <Name>Enter</Name>
        <Event>
            <Name>ToExit</Name>
            <ToState>Exit</ToState>
            <PreConditions>
                <Condition>
                    <Expression>testBaseStateMachine.everFalse</Expression>
                    <Result>False</Result>
                </Condition>
                <Condition>
                    <Expression>testBaseStateMachine.test</Expression>
                    <Result>2</Result>
                </Condition>
            </PreConditions>            
            <PreActions>
                <Action>
                    <Expression>testBaseStateMachine.testPrint</Expression>
                </Action>
            </PreActions>
        </Event>
    </State>
    <State>
        <Name>Exit</Name>
        <Event>
            <Name>ToNull</Name>
            <ToState>Null</ToState>
            <PreConditions>
                <Condition>
                    <Expression>testBaseStateMachine.everTrue</Expression>
                    <Result>True</Result>
                </Condition>
            </PreConditions>            
            <PostActions>
                <Action>
                    <Expression>testBaseStateMachine.testPrint</Expression>
                </Action>
            </PostActions>
        </Event>
    </State>
    <State>
        <Name>Null</Name>
        <Event>
            <Name>ToNull</Name>
            <ToState>Null</ToState>
            <PostActions>
                <Action>
                    <Expression>testBaseStateMachine.testPrint</Expression>
                </Action>
            </PostActions>
        </Event>
    </State>
    <Initial_State>Enter</Initial_State>
</x:States>
